<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/nametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:padding="5dp"
        android:textColor="#6af"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/popularity"
        android:layout_toEndOf="@+id/nametv"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="13sp"
        android:text="Name" />


    <TextView
        android:id="@+id/votecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Count :"
        android:padding="5dp"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_below="@+id/poptv"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popularity"
        android:padding="5dp"
        android:textColor="#222"
        android:textSize="16sp"
        android:layout_below="@+id/nametv"
        android:layout_toEndOf="@+id/poptv" />

    <TextView
        android:id="@+id/poptv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popularity :"
        android:padding="5dp"
        android:textColor="#222"
        android:textSize="16sp"
        android:layout_below="@+id/nametv"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/vote"
        android:padding="5dp"
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/votecount"
        android:layout_toEndOf="@+id/votecount"
        android:text="Vote" />

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#000"
    android:layout_margin="5dp"
    android:layout_below="@id/votecount"
    ></View>
</RelativeLayout>
